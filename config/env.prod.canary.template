# Production Canary Configuration Template
# Copy to .env.prod.canary and fill in secrets
# Deploy with: docker compose --env-file .env.prod.canary up -d

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# EXECUTION MODE (Critical)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

EXEC_MODE=LIVE
COPY_EXECUTION_MODE=DRY
EMERGENCY_STOP=false

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CANARY LIMITS (Strict Safety Caps)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

CANARY_ENABLED=true
MAX_NOTIONAL_USDC=10
MAX_LEVERAGE=2
ALLOWED_SYMBOLS=BTC-USD,ETH-USD

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FEATURE FLAGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

ENABLE_RBF=true
ALLOW_LIVE_AFTER_STREAK=3
SIGNALS_ENABLED=true
AUTOMATION_PAUSED=false

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DATABASE & REDIS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

DATABASE_URL=postgresql://user:pass@prod-db:5432/vanta
REDIS_URL=redis://prod-redis:6379/0

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# BLOCKCHAIN (Base Mainnet)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

BASE_RPC_URL=https://mainnet.base.org
CHAIN_ID=8453
SIGNER_BACKEND=local
SIGNER_PRIVATE_KEY=0xYOUR_CANARY_KEY

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SECRETS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
WEBHOOK_HMAC_SECRET=YOUR_HMAC_SECRET

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MONITORING
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

LOG_LEVEL=INFO
LOG_FORMAT=json
DEPLOY_ENV=production-canary
DEPLOY_VERSION=v9.0.1-rc1

